/**index.wxss**/
.container {
 padding: 0;
}
.header{
  width: 90%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-coordinates_fill:before { content: "\e6f8"; }
.icon-coordinates_fill:after {  content: "\e783"; }
.weather{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.weather-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.weather-temp,.weather-state{
  font-size:20rpx;
}
.weather-icon{
  display: flex;
  align-items: center;
}
image{
  width: 40rpx;
  height: 40rpx;
}